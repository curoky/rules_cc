load("@bazel_tools//tools/build_defs/repo:git.bzl", "git_repository", "new_git_repository")
load("@bazel_tools//tools/build_defs/repo:http.bzl", "http_archive")

def register():
    {%- for formula in formulas %}
    {%- if formula.repo_args and formula.repo_args.path %}
    native.new_local_repository(
    {%- elif formula.build_path %}
    new_git_repository(
        remote = "{{ formula.git_url }}",
    {%- else %}
    git_repository(
        remote = "{{ formula.git_url }}",
    {%- endif %}
        name = "{{ formula.namespace }}",
      {%- if formula.repo_args %}
        {%- for k,v in formula.repo_args.items() %}
        {{ k }} = {{ v -}},
        {%- endfor %}
      {%- endif %}
    )
    {%- endfor %}
